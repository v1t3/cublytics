{% extends 'base.html.twig' %}

{% block header %}
    <div class="header">
        <div class="logo"></div>
        <div class="top-menu">
            <div class="top-left links">
                <a href="/" class="top-menu-link">Главная</a>
            </div>
            <div class="top-right links">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <span>{{ app.user.username }}</span>
                    <a href="{{ path('spa') }}" class="top-menu-link">Кабинет</a>
                    <a href="{{ path('app_logout') }}" class="top-menu-link">Выйти</a>
                {% else %}
                    <a href="{{ path('app_login_coub') }}" class="top-menu-link">Войти через COUB</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
